<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/textGray</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>


    <style name="AppThemeIndigo" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigo</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="colorControlNormal">@color/whiteText</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="AppTheme.Indigo">
        <item name="colorAccent">@color/indigo</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/whiteText</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/indigo</item>
    </style>



    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

</resources>