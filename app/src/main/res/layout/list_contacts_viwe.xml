<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/whiteBack">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/dynamicName"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:layout_gravity="left">
            <ImageView
                android:id="@+id/iconListCont"
                android:layout_width="20dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:tint="@color/textGray"
                android:scaleType="centerCrop"
                android:layout_weight="0">
            </ImageView>
            <TextView
                android:id="@+id/ferstSimvol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/back_list_contacts_avatar"
                android:layout_gravity="center"
                android:textColor="@color/textGray"
                android:text=""
                android:textSize="16sp">
            </TextView>
        </FrameLayout>
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_marginLeft="-40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_weight="0">
        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textGray"
                android:text="dfghdfg"
                android:textSize="16sp">
            </TextView>

            <TextView
                android:id="@+id/tvPhone"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="12sp"
                android:textColor="@color/textGray"
                android:text="dfsgdsg"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>